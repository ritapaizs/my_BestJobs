<header>
    <div id="headerJob" class="header">
        <div class="container">
            <div id="image" class="image">
                <a href="{{ path('app_job_list') }}">
                    <img src="https://ss.bestjobs.eu/img/bestjobs-logo.png" alt="Bestjobs" id="logoBestJobs">
                </a>
            </div>


            {{ form_start(form)}}
            {{ form_start(form, {'action': path('app_job_keyword', {'keyword' : keyword}), 'method': 'POST', 'attr': {'id':'search'}}) }}
