                <div class="col-md-6" id="searchbar">
                    {{ form_widget(form.keyword, {'attr': {'class': 'col-md-12'}}) }}
                </div>

                <div class="col-md-2 text-right" id="searchbtn">
                    {{ form_widget(form.cauta) }}
                </div>
            </div>

            {{ form_end(form) }}



        </div>
    </div>
</header>

